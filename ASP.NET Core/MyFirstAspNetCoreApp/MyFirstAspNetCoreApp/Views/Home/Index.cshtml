@model MyFirstAspNetCoreApp.ViewModels.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@inject IConfiguration Configuration

<div class="text-center">
    @if (User.Identity.IsAuthenticated)
    {
        <h1 class="display-4">Welcome, @User.Identity.Name</h1>
    }
    else
    {
        <h1 class="display-4">Welcome, Anonymous</h1>
    }
    
    <h2>Server: @this.Configuration["Server"]</h2>
    <h2>Email api: @this.Configuration["EmailSettings:ApiKey"]</h2>
    <h2>Email port: @this.Configuration["EmailSettings:Port"]</h2>
    
    <p>@Model.CurrentDate</p>
    <p>@Model.UsersCount</p>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
